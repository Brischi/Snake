<Window x:Class="SnakeGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeGame"
        mc:Ignorable="d"
        KeyDown= "SnakeHeadMovement"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Background image for the window border -->
        <Image Source="C:\Users\Margit.Aigner\Source\Repos\Brischi\Snake\BorderBackground6.png" Stretch="Fill" Panel.ZIndex="0" Margin="-20,-11,0,0"/>

        <!-- Main Grid Layout -->
        <Grid Panel.ZIndex="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <!-- Game area (left) -->
                <ColumnDefinition Width="1*"/>
                <!-- Scoreboard (right) -->
            </Grid.ColumnDefinitions>

            <!-- Left Grid: Game Area -->
            <Grid x:Name="GameArea" Background="Black" Margin="45,19,5,35">
                <Border x:Name="GameBorder" BorderThickness="5" BorderBrush="#FF2CFFDD">
                    <Grid>

                        <!-- Game area content goes here -->
                        <Ellipse x:Name="SnakeHead" HorizontalAlignment="Center" Height="20" Margin="0,190,0,0" Stroke="Green" VerticalAlignment="Top" Width="20" Fill="#FF72E869" OpacityMask="#FF00FF27"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Right Grid: Scoreboard -->
            <Grid Grid.Column="1" Margin="5,10,10,10">
                <Image Source="/ScoreboardBorder2.png" Stretch="Fill" Margin="0,14,0,30"/>
                <StackPanel Orientation="Vertical" Margin="20,40,20,40">
                    <TextBlock Text="Points: 0" FontSize="20" Foreground="#FFF7EFEF" Margin="0,10,0,10" HorizontalAlignment="Center"/>
                    <TextBlock Text="Timer: 00:00" FontSize="20" Foreground="#FFF3E9E9" Margin="0,10,0,10" HorizontalAlignment="Center"/>
                    <Image Source="/HeartStatus_3.png" Stretch="Fill" Margin="0,10,0,10" HorizontalAlignment="Center" Height="56" Width="85"/>
                </StackPanel>
            </Grid>
        </Grid>

    </Grid>
</Window>
